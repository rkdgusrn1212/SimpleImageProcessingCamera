<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_preview_relative_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khgkjg12.simpleimageprocessor.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is sample"
        android:id="@+id/image_processor_text_view"/>

    <Button
        android:id="@+id/image_processor_menu_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_processor_text_view"
        android:text="@string/image_processor_menu_toggle_button" />

</RelativeLayout>